# /admin/.htaccess - SIMPLIFICADO

# Disable directory listing
Options -Indexes

# Allow all access to admin files
Require all granted

# Allow JSON files
<FilesMatch "\.json$">
  Require all granted
</FilesMatch>

# Allow all HTTP methods for PHP files
<FilesMatch "\.php$">
  <Limit GET POST PUT DELETE HEAD OPTIONS>
    Require all granted
  </Limit>
</FilesMatch>