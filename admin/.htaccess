# Disable ModSecurity for admin API endpoints (Hostinger compatibility)
<IfModule mod_security.c>
  SecRuleEngine Off
</IfModule>

# Allow public read access to JSON (for frontend)
<FilesMatch "\.(json)$">
  Require all granted
</FilesMatch>

# Block write methods from public, but allow API folder
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Allow all HTTP methods to /api/ endpoints (for admin saves)
  RewriteCond %{REQUEST_URI} /admin/api/ [NC]
  RewriteRule ^ - [L]
  
  # Block POST/PUT/DELETE to other admin files
  RewriteCond %{REQUEST_METHOD} !^(GET|HEAD)$
  RewriteRule .* - [F]
</IfModule>

# Disable directory listing
Options -Indexes
