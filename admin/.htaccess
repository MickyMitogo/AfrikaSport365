# Allow public read access to JSON (for frontend)
<FilesMatch "\.(json)$">
  Require all granted
</FilesMatch>

# Block all write methods from public
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_METHOD} !^(GET|HEAD)$
  RewriteRule .* - [F]
</IfModule>

# Disable directory listing
Options -Indexes
