# Disable directory listing
Options -Indexes

# Allow read access to JSON files from everyone
# PHP scripts can write via file_put_contents()
<FilesMatch "\.json$">
  Require all granted
</FilesMatch>

# Set proper MIME type for JSON files
<IfModule mod_mime.c>
  AddType application/json .json
</IfModule>

# Enable CORS for frontend JavaScript
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, HEAD, OPTIONS"
</IfModule>
